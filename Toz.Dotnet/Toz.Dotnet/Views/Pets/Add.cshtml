@using Microsoft.AspNetCore.Mvc.Localization
@using Toz.Dotnet.Models.EnumTypes
@model Toz.Dotnet.Models.Pet
@inject IViewLocalizer Localizer

@{
    ViewData["Title"] = "Dodawanie";
}

<body>
    <h2>@Localizer["Title"]</h2>
    <hr>

    <div class="AddingPet">
        <form asp-controller="Pets" asp-action="Add" method="POST">
            <table id="AddPetTable" align="center">
                <tr>
                    <td><label>@Localizer["Name"]:</label></td>
                    <td><input asp-for="Name" class="form-control" id="PetName"></td>
                </tr>
                <tr>
                    <td><label>@Localizer["Type"]:</label></td>
                    <td>
                        <select asp-for="Type" class="form-control" id="PetType">
                            <option value="0">@Localizer["Unknown"]</option>
                            <option value="1">@Localizer["Cat"]</option>
                            <option value="2">@Localizer["Dog"]</option>
                        </select>
                    </td>
                </tr>
                <tr>
                    <td><label>@Localizer["Sex"]:</label></td>
                    <td>
                        <select asp-for="Sex" class="form-control" id="PetSex">
                            <option value="0">@Localizer["Unidentified"]</option>
                            <option value="1">@Localizer["Male"]</option>
                            <option value="2">@Localizer["Female"]</option>
                        </select>
                    </td>
                </tr>
                <tr>
                    <td colspan="2" style="text-align: center;">
                        <div class="form-group">
                            <label>@Localizer["Photo"]</label>
                            <div class="input-group">
                                <span class="input-group-btn">
                                    <span class="btn btn-default btn-file">
                                        @Localizer["Browse"] <input type="file" id="imgInp">
                                    </span>
                                </span>
                                <input type="text" class="form-control" readonly>
                            </div>
                            <img id='img-upload'/>
                        </div>
                    </td>
                </tr>
                <tr>
                    <td><label>@Localizer["Description"]:</label></td>
                    <td><input asp-for="Description" type="text" class="form-control" id="PetDescription"></td>
                </tr>
                <tr>
                    <td><label asp-for="Address">@Localizer["Address"]:</label></td>
                    <td><input asp-for="Address" type="text" class="form-control" id="PetAddress"></td>
                </tr>
                <tr>
                    <td colspan="2" style="text-align: center;">
                        <br>
                        <input class="form-control" type="submit" id="PetSave" value=@Localizer["Save"]>
                        <br>
                        <input class="form-control" type="submit" id="PetCancel" value=@Localizer["Cancel"]>
                    </td>
                </tr>
            </table>
        </form>
    </div>
</body>

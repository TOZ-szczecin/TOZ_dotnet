@using Microsoft.AspNetCore.Mvc.Localization
@using Toz.Dotnet.Core.Interfaces

@inject IAuthService _iAuthService
@inject IViewLocalizer Localizer
<head>
    <link rel="stylesheet" href="~/css/mainpage.css" />
</head>

<body>
@if (_iAuthService.IsAuth == true)
{
    <div class="container">
        <div class="col-sm-4">
            <a asp-controller="Pets" asp-action="Index">
                <div class="tile purple">
                    <div class="tile-icon"><img src="~/images/pets.png" /></div>
                    <h3 class="title">@Localizer["PetTileTitle"]</h3>
                    <p>@Localizer["PetTileDescription"]</p>
                </div>
            </a>
        </div>
        <div class="col-sm-4">
            <a asp-controller="News" asp-action="Index">
                <div class="tile red">
                    <div class="tile-icon"><img src="~/images/news.png" /></div>
                    <h3 class="title">@Localizer["NewsTileTitle"]</h3>
                    <p>@Localizer["NewsTileDescription"]</p>
                </div>
            </a>
        </div>
        <div class="col-sm-4">
            <a asp-controller="Users" asp-action="Index">
                <div class="tile orange">
                    <div class="tile-icon"><img src="~/images/users.png" /></div>
                    <h3 class="title">@Localizer["UsersTileTitle"]</h3>
                    <p>@Localizer["UsersTileDescription"]</p>
                </div>
            </a>
        </div>
        <div class="col-sm-4">
            <a asp-controller="Schedule" asp-action="Index">
                <div class="tile green">
                    <div class="tile-icon"><img src="~/images/calendar.png" /></div>
                    <h3 class="title">@Localizer["SchedulerTileTitle"]</h3>
                    <p>@Localizer["SchedulerTileDescription"]</p>
                </div>
            </a>
        </div>
        <div class="col-sm-4">
            <a asp-controller="Organization" asp-action="Info">
                <div class="tile blue">
                    <div class="tile-icon"><img src="~/images/company.png" /></div>
                    <h3 class="title">@Localizer["OrganizationTileTitle"]</h3>
                    <p>@Localizer["OrganizationTileDescription"]</p>
                </div>
            </a>
        </div>
        <div class="col-sm-4">
            <a asp-controller="Proposals" asp-action="Index">
                <div class="tile purple">
                    <div class="tile-icon"><img src="~/images/proposal.png" /></div>
                    <h3 class="title">@Localizer["ProposalsTileTitle"]</h3>
                    <p>@Localizer["ProposalsTileDescription"]</p>
                </div>
            </a>
        </div>
    </div>
}
</body>
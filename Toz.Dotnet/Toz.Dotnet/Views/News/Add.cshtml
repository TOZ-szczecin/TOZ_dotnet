@using Microsoft.AspNetCore.Mvc.Localization
@model Toz.Dotnet.Models.News
@inject IViewLocalizer Localizer

@{
    ViewData["Title"] = @Localizer["Title"];
}

<body>
    <h2>@Localizer["PageTitle"]</h2>
    <hr>
    <div class="AddingNews">
        <form asp-controller="News" asp-action="Add" method="POST" enctype="multipart/form-data">
            <input type="hidden" name="status" value="Released"/>
            <table class="forms" align="center">
                <tr align="left">
                    <td></td>
                    <td>@Html.ValidationMessageFor(Model => Model.Title, null, null)</td>
                </tr>
                <tr>
                    <td class="col-md-3"><label>@Localizer["Title"]:</label></td>
                    <td class="col-md-9"><textarea asp-for="Title" class="form-control" id="NewsTitle" cols="20" rows="2" style="resize: vertical"></textarea></td>
                </tr>
                <tr align="left">
                    <td></td>
                    <td>@Html.ValidationMessageFor(Model => Model.Contents, null, null)</td>
                </tr>
                <tr>
                    <td class="col-md-3"><label>@Localizer["Text"]:</label></td>
                    <td class="col-md-9"><textarea asp-for="Contents" class="form-control" id="NewsContents" cols="20" rows="4" style="resize: vertical"></textarea></td>
                </tr>
                <tr>
                    <td colspan="2" style="text-align: center;">
                        <div class="form-group">
                            <label>@Localizer["Photo"]</label>
                            <div class="input-group">
                                <span class="input-group-btn">
                                    <span class="btn btn-default btn-file">
                                        @Localizer["Browse"] <input asp-for="Photo" type="file" id="imgInp" asp-for="Photo" accept="image/jpeg,image/png">
                                    </span>
                                </span>
                                <input type="text" class="form-control" readonly>
                            </div>
                           
                            @if (Model.Photo != null)
                            {
                                <img id='img-upload' src="data:image;base64,@System.Convert.ToBase64String(Model.Photo)" />
                            }
                            else
                            {
                                <img id='img-upload' />
                            }
                           </div>
                    </td>
                </tr>
                <tr>
                    <td colspan="2" style="text-align: center;">
                        <div class="row">
                            <div class="col-xs-6">
                                <input type="button" class="btn btn-primary btn-block" id="NewsCancel" value=@Localizer["Cancel"] onclick="@("window.location.href='" + @Url.Action("Index", "News") + "'");">
                            </div>
                            <div class="col-xs-6">
                                <input type="submit" class="btn btn-primary btn-block" id="NewsSave" name="saveBtn" value=@Localizer["Save"]  onclick="$('input[name=status]').val('Unreleased');$(this).closest('form').submit();">
                            </div>
                        </div>
                    </td>
                </tr>
                <tr>
                    <td colspan="2" style="text-align: center;">
                        <input type="submit" class="btn btn-primary btn-block" id="NewsSave" name="publishBtn" value=@Localizer["Publish"] onclick="$('input[name=status]').val('Released');$(this).closest('form').submit();">
                    </td>
                </tr>
            </table>
        </form>
    </div>
</body>
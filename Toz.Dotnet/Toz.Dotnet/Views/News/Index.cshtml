@using Microsoft.AspNetCore.Mvc.Localization
@using Toz.Dotnet.Models.EnumTypes
@model IEnumerable<Toz.Dotnet.Models.News>
@inject IViewLocalizer Localizer

@{
    ViewData["Title"] = @Localizer["PageTitle"];
}

<h2>@Localizer["PageTitle"]</h2>
<div class="table-responsive">
    <div class="panel panel-default">
        <div class="panel-body">
            @Html.ActionLink(@Localizer["Add"].Value, "Add", "News", null, new { @style = "width: 120px;", @class = "btn btn-primary btn-block"})
        </div>
    </div>
    <table class="table">
        <tr>
            <th></th>
            <th>@Localizer["Title"]</th>
            <th>@Localizer["Photo"]</th>
            <th>@Localizer["ShortBody"]</th>
            <th></th>
            <th></th>
        </tr>
        @foreach (var item in Model)
        {
            <tr>
                @if(!@item.Published.HasValue) 
                {
                    <td>@Localizer["Lack"]</td>
                }
                else
                {
                    <td>@item.Published</td>
                }
                <td style="word-wrap:break-word;"><div style="width:200px;overflow:auto">@item.Title</div></td>
                <td><img src="data:image;base64,@Convert.ToBase64String(item.Photo)" alt="Pet photo"/></td>
                <td class="overflow-ellipsis">@item.Contents</td>

                @if(@item.Type == NewsStatus.Unreleased)
                {
                    <td>
                        <div class="unreleased pull-right"><div class="glyphicon glyphicon-exclamation-sign"></div>
                            @Localizer["Unreleased"]
                        </div>
                    </td>
                }
                else if(@item.Type == NewsStatus.Archived)
                {
                    <td>
                        <div class="archived pull-right"><div class="glyphicon glyphicon-exclamation-sign"></div>
                            @Localizer["Archived"]
                        </div>
                    </td>
                }
                else
                {
                    <td></td>
                }
                <td>@Html.ActionLink(@Localizer["Edit"].Value, "Edit", "News", new{ id = item.Id }, new { @class = "btn btn-primary btn-block"}) </td>
            </tr>
        }
    </table>
</div>
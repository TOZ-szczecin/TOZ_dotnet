@using Microsoft.AspNetCore.Mvc.Localization
@using Toz.Dotnet.Models.EnumTypes
@model IEnumerable<Toz.Dotnet.Models.ViewModels.CommentViewModel>
@inject IViewLocalizer Localizer
@{
    ViewData["Title"] = @Localizer["PageTitle"];
}
<div id='myModal' class='modal fade in'>
    <div class="modal-dialog">
        <div class="modal-content">
            <div id='myModalContent'></div>
        </div>
    </div>
</div>
<div class="panel panel-default panel-table">
    <div class="panel-heading">
        <div class="row">
            <div class="col col-xs-4">
                <h3 class="panel-title">@Localizer["PageTitle"]</h3>
            </div>
            <div class="col col-xs-4">
                <input type="text" id="search" class="search form-control" placeholder="@Localizer["SearchPlaceholder"]">
            </div>
            
        </div>
    </div>
    <div class="panel-body">
        <table id="table" class="table table-striped table-bordered table-list dt-responsive compact" style="width:100%">
            <thead>
                <tr>
                    <th>@Localizer["CreationDate"]</th>
                    <th>@Localizer["NameAndSurname"]</th>
                    <th>@Localizer["Contents"]</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.Created</td>
                        <td>@item.UserIdentity</td>
                        <td>@item.Contents</td>
                        <td class="center-column">
                           <a class="data-modal btn btn-primary btn-sm" href="@Url.Action("Delete","Comments")/@item.TheComment.Id"><span class="glyphicon glyphicon-trash"></span></a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>